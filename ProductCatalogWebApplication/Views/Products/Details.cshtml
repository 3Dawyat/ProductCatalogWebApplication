@model ProductViewModel
<div class="container">
    <div class="row">
        <div class="col col-12 mt-3">
            <div class="card">
                <h1 class="card-title">@Model.Name</h1>
                <h2 class="card-subtitle mb-2 text-muted">Price : @Model.Price</h2>
                <h3 class="card-subtitle mb-2 text-muted">Category Name : @Model.CategoryName</h3>
            </div>
        </div>
    </div>
</div>
